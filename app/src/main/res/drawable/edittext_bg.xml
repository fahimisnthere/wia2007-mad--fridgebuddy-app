<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF"/>

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#D8DADC"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Inner padding -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp"/>
</shape>
